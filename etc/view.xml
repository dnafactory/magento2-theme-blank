<?xml version="1.0"?>

<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="cart_page_product_thumbnail" type="small_image">
                <width>116</width>
                <height>116</height>
            </image>

            <image id="product_page_image_medium" type="image">
                <width>400</width>
                <height>400</height>
            </image>
            <image id="product_page_image_small" type="thumbnail">
                <width>72</width>
                <height>72</height>
            </image>

            <image id="mini_cart_product_thumbnail" type="thumbnail">
                <width>42</width>
                <height>42</height>
            </image>

            <image id="category_page_grid" type="thumbnail">
                <width>268</width>
                <height>268</height>
            </image>
        </images>
    </media>

    <vars module="Magento_Catalog">
        <!-- Gallery and magnifier theme settings. Start -->
        <var name="gallery">
            <var name="arrows">false</var> <!-- Turn on/off arrows on the sides preview (true/false) -->
            <var name="allowfullscreen">false</var> <!-- Turn on/off fullscreen (true/false) -->
            <var name="thumbmargin">10</var> <!-- Thumbmargin -->
        </var>

        <var name="magnifier">
            <var name="width">160</var> <!-- Width of magnifier block -->
            <var name="height">160</var> <!-- Height of magnifier block -->
            <var name="mode">outside</var> <!-- Zoom type (outside/inside) -->
            <var name="enabled">true</var> <!-- Turn on/off magnifier (true/false) -->
        </var>
    </vars>
</view>
