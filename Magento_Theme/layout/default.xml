<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" name="additional-dna-head" template="Magento_Theme::misc/additional-head.phtml" />
        </referenceBlock>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_width" xsi:type="number">250</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="parent_css_class" xsi:type="string">mb-5</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
