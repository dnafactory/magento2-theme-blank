<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="customer.account.edit.content" as="customer_account_edit_content" htmlTag="div" htmlClass="block-group block-group-2-child row">
                <container name="customer.account.edit.form" as="customer_account_edit_form" htmlTag="div" htmlClass="block col-md-6 col-12" />
                <block name="block.separator.customer.edit" as="block_separator_customer_edit" template="DNAFactory_ThemeCore::misc/block/separator.phtml">
                    <action method="setCustomCss">
                        <argument name="custom_css" xsi:type="string">mobile col-12</argument>
                    </action>
                    <action method="setCustomInlineStyle">
                        <argument name="custom_inline_style" xsi:type="string">margin: 0 0 20px 0!important;</argument>
                    </action>
                </block>
                <block name="customer.account.edit.delete" as="customer_account_edit_delete" template="DNAFactory_ThemeCustomerArea::deletecustomer.phtml">
                    <action method="setCustomCss">
                        <argument name="custom_css" xsi:type="string">block col-md-6 col-12</argument>
                    </action>
                </block>
            </container>
        </referenceContainer>
        <referenceContainer name="customer.account.edit.delete">
            <block class="Amasty\Gdpr\Block\Settings"
                   name="customer_account_gdpr_settings"
                   as="settings"
                   cacheable="false">
                <action method="setVisibleBlock">
                    <argument name="visibleBlock" xsi:type="string">delete,download,anonymise,revoke</argument>
                </action>
                <action method="setNeedPassword">
                    <argument name="needPassword" xsi:type="boolean">true</argument>
                </action>
                <action method="setIsOrder">
                    <argument name="isOrder" xsi:type="boolean">false</argument>
                </action>
            </block>
        </referenceContainer>
        <move element="customer_edit" destination="customer.account.edit.form" as="customer_edit"/>
        <referenceBlock name="amazon.pay.password.reset" remove="true" />
        <referenceBlock name="customer.account.view.custom.title">
            <action method="setTitle">
                <argument name="title" xsi:type="string">Il mio profilo</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="custom.title.back.url">
            <block name="back.url" template="DNAFactory_ThemeCore::misc/page/back-url.phtml">
                <action method="setBackUrl">
                    <argument name="back_url" xsi:type="string">customer/account</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
