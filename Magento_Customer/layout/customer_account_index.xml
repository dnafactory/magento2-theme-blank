<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
    <head>
        <title>Il mio Account</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Il mio Account</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="customer_account_dashboard_top" remove="true" />
        <referenceBlock name="customer.account.view.custom.title">
            <action method="setTitle">
                <argument name="title" xsi:type="string">La mia bacheca</argument>
            </action>
        </referenceBlock>
        <move element="customer.account.custom.message" destination="custom.title.additional.element" after="-"/>
    </body>
</page>
