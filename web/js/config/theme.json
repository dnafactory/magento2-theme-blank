{
  "children": {
    "dom-wrapper": {
      "component": "js/lib/dom-listener",
      "children": {
        "password": {
          "element": "input[type=password]:not(.handled)",
          "component": "js/theme/dom/password-utils",
          "options": {
            "triggerClass": "icon-eye",
            "triggerClassHide": "icon-eye-off"
          }
        },
        "calendar": {
          "element": "[data-widget='date']",
          "component": "js/theme/inputs/date"
        },
        "search": {
          "element": "input.input-search:not(.handled)",
          "component": "js/theme/dom/search-utils",
          "options": {
            "triggerClassBase": "icon-search",
            "triggerClassClear": "icon-remove"
          }
        },
        "checkbox": {
          "element": "input[type=checkbox]:not(.custom-checkbox):not(.custom-switch)",
          "component": "js/theme/inputs/custom-input",
          "options": {
            "type": "checkbox"
          }
        },
        "file": {
          "element": ".custom-file-input",
          "component": "js/theme/inputs/custom-file"
        },
        "radio": {
          "element": "input[type=radio]:not(.custom-radio)",
          "component": "js/theme/inputs/custom-input",
          "options": {
            "type": "radio"
          }
        },
        "select": {
          "element": "select:not(.custom-select):not(.custom-dropdown)",
          "component": "js/theme/inputs/custom-dropdown",
          "options": {
            "valueTemplate":  false,
            "labelTemplate": false
            }
        },
        "dropdown": {
          "element": "select.custom-dropdown",
          "component": "js/theme/inputs/custom-dropdown"
        },
        "switch": {
          "element": "input[type=checkbox].custom-switch",
          "component": "js/theme/inputs/custom-input",
          "options": {
            "type": "switch"
          }
        },
        "text": {
          "element": "input[type=text], input[type=password], input[type=email], input[type=number], input[type=search], input[type=tel], textarea",
          "component": "js/theme/inputs/focusable"
        },
        "multipath-icons": {
          "component": "js/theme/dom/multipath-icons"
        }
      }
    },
    "scrollbar-fix": {
      "component": "js/theme/scrollbar-fix"
    },
    "autofill": {
      "component": "js/theme/detect-autofill"
    }
  }
}